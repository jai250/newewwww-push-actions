name: ppassa files btw jobs
on: [ workflow_dispatch ]
jobs:
  job1:
    runs-on: ubuntu-latest
    outputs:
      FILE_LIST: ${{ steps.list-files.outputs.files }}
    steps:
      - name: List files in the repository
        id: list-files
        run: |
          FILES=$(ls -1)
          echo "files=$FILES" >> $GITHUB_OUTPUT

  job2:
    runs-on: ubuntu-latest
    needs: job1
    steps:
      - name: Print files received from job1
        run: |
          echo "Files received from job1:"
          echo "${{ needs.job1.outputs.FILE_LIST }}"            